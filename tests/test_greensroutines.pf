   @test
   subroutine test_deallocate()
      integer, parameter :: n = 3
      type(greensfunc) :: GF(n,n,n)
      logical :: is_not_allocated(n,n,n)
      integer:: i, j, k

      is_not_allocated = .false.

      call allocate_GF(GF,10)
      call deallocate_GF(GF)

      do concurrent (i=1:n, j=1:n,k=1:n)
         if (.not. allocated(GF(i,j,k)%GF)) is_not_allocated = .true.
      end do
      @assertTrue(all(is_not_allocated))
   end subroutine test_deallocate
   

