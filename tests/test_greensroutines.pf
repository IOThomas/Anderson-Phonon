      call initialise_GF(GF1, test)
      @assertFalse((GF1.eq.GF2))
      @assertTrue(GF1.ne.GF2)

      test = cmplx(1.0_real12, 1.0_real12, real12)
      call initialise_GF(GF1, test)
      @assertFalse((GF1.eq.GF2))
      @assertTrue(GF1.ne.GF2)
